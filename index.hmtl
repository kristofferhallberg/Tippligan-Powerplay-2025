<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TippLigan</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f7f7f7; text-align: center; }
    h1 { margin-top: 30px; }
    table { margin: 30px auto; border-collapse: collapse; background: white; border-radius: 8px; overflow: hidden; }
    th, td { padding: 10px 20px; border-bottom: 1px solid #ddd; }
    th { background: #333; color: white; }
    img { width: 40px; height: 40px; border-radius: 50%; object-fit: cover; }
  </style>
</head>
<body>
  <h1>Tipp-Ligan</h1>
  <table id="scoreboard"></table>

  <script>
    fetch('scores.json')
      .then(r => r.json())
      .then(data => {
        let html = '<tr><th>Bild</th><th>Namn</th><th>Po√§ng</th><th>Inspelade pengar</th></tr>';
        data.sort((a, b) => b.points - a.points);
        const maxMoney = Math.max(...data.map(p => p.money));
        data.forEach(p => {
          html += `
            <tr style="background:${p.money === maxMoney ? '#fff8cc' : 'white'}">
              <td><img src="${p.image}" alt="${p.name}"></td>
              <td>${p.name}</td>
              <td>${p.points}</td>
              <td>${p.money.toFixed(2)} kr</td>
            </tr>`;
        });
        document.getElementById('scoreboard').innerHTML = html;
      });
  </script>
</body>
</html>
